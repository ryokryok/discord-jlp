{
  "name": "kousei",
  "description": "A Discord Bot for Japanese proofreading.",
  "version": "1.0.0",
  "license": "MIT",
  "author": {
    "name": "Mr_ozin <mrozin.dev@gmail.com>"
  },
  "scripts": {
    "dev": "wrangler dev src/index.ts",
    "deploy": "wrangler deploy --minify src/index.ts --name kousei --compatibility-date 2023-01-01",
    "format": "biome format --write ./src",
    "lint": "biome lint ./src",
    "check": "biome check --apply ./src",
    "test": "vitest",
    "register": "tsm src/register.ts"
  },
  "dependencies": {
    "discord-api-types": "^0.37.65",
    "discord-interactions": "^3.4.0",
    "hono": "^3.11.2"
  },
  "devDependencies": {
    "@biomejs/biome": "1.4.1",
    "@cloudflare/workers-types": "^4.20230914.0",
    "dotenv": "^16.3.1",
    "msw": "^2.0.10",
    "tsm": "^2.3.0",
    "vitest": "^1.0.2",
    "wrangler": "^3.15.0"
  }
}
